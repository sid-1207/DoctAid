  <body>
    
      <form action="/patientcheckout2/<%=data._id%>" method="POST">
        <div class="container shadow-lg p-3" style="border-radius: 20px; height: 550px; width: 700px;">
          <h4 class="text-center">
            Doct<span style="color: green">Aid</span>
          </h4>
          <h6 class="text-center">
            Feed<span style="color: green">back</span> for <%=data.username%>
          </h6>
          <hr>
          <div class="text-center" style="color: grey;"><i>Help us improve our services by giving appropriate feedback!</i></div>
          <div style="height: 40px;"></div>
          <div class="row">
            <h5 class="px-4 py-4" style="color: rgb(21, 21, 148);">Rate your Doctor</h5>
            <select class="py-0" name="rating" id="rating"style="border: 2px solid rgb(236, 233, 233) ;">
              <%for(var i=1;i<=10;i++){%>
              <option selected class="dropdown-item" href="#">
               <%=i%> 
              </option>
            <%}%>
            </select>
<div class="px-4"></div><div class="px-4"></div>
            <h5 class="px-4 py-4" style="color: rgb(21, 21, 148);">Rate our System</h5>
            <select class="py-0" name="" id=""style="border: 2px solid rgb(236, 233, 233) ;">
              <%for(var i=1;i<=10;i++){%>
              <option selected class="dropdown-item" href="#">
               <%=i%> 
              </option>
            <%}%>
            </select>
          </div>
          <div class="py-4 px-2 form-group">
            <label for="comment"><h5 style="color: rgb(21, 21, 148);">Comment</h5></label>
            <input name="comment"type="text"class="form-control"id="comment"aria-describedby="comment"placeholder="If Any"/>
          </div>
          <div style="height: 40px;"></div>
          <div class="text-center">            
            <button class="btn btn-success" type="submit">Proceed for Payment</button>
          </div>
          <div class="text-center py-4">            
            Thankyou for your Response !
          </div>
        </div>
        </form>
